<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Set metadata -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Set judul halaman -->
    <title>To-Do List App</title>
    <!-- Set style CSS -->
    <style>
        /* Gaya untuk seluruh halaman */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        /* Gaya untuk judul halaman */
        h1 {
            text-align: center;
        }

        /* Gaya untuk formulir tambah tugas */
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

        /* Gaya untuk setiap tugas dalam daftar */
        .task-item {
            border: 1px solid #ddd;
            padding: 8px;
            margin: 5px;
        }
    </style>
</head>
<body>
    <!-- Header halaman -->
    <h1>List Kegiatan Andhika</h1>
    
    <!-- Form untuk menambahkan tugas -->
    <form action="/add" method="POST">
        <!-- Input untuk menambahkan tugas baru -->
        <input type="text" name="task" required>
        <!-- Tombol untuk menambahkan tugas -->
        <button type="submit">Add Kegiatan</button>
    </form>

    <!-- Daftar tugas tanpa menggunakan tabel -->
    <div>
        <!-- Loop melalui setiap tugas dan tampilkan -->
        <% todos.forEach(todo => { %>
            <!-- Tampilkan nama tugas dalam div dengan class "task-item" -->
            <div class="task-item">
                <%= todo.task %>
            </div>
        <% }); %>
    </div>
</body>
</html>
